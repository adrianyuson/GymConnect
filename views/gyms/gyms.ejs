<% include ../partials/header %>

<div class="container">
    <div class="row text-center mb-5">
        <% gyms.forEach (function(gym) { %>
        <div class="col-md-6">
            <div class="img-thumbnail">
                    <img class="img-fit" src="<%= gym.image %>" onerror="this.onerror=null;this.src='https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1024px-No_image_3x4.svg.png';">
                <div class="figure-caption">
                    <a class="gym-title" href="/gyms/<%= gym._id %>"><%= gym.name %></a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <% if(currentUser) { %>
        <div>
            <a class="btn btn-primary btn-lg" href="/gyms/new">Add New Gym</a>
        </div>
    <% } %>
</div>

<% include ../partials/footer %>