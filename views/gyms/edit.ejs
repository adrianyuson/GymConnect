<% include ../partials/header %>

<div class="container">
    <div class="default-form">
        <h1 style="text-align: center;">Edit <%= gym.name %></h1>
        <form action="/gyms/<%= gym._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" id="name" name="gym[name]" value="<%= gym.name %>" maxlength="30" required>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" id="description" name="gym[description]" value="<%= gym.description %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="location" name="gym[location]" value="<%= gym.location %>" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" id="price" name="gym[price]" value="<%= gym.price %>" max="1000" min="1" step="1" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>