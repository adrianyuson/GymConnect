<% include ../partials/header %>

<div class="container">
    <div style="width: 30%; margin: 25px auto">
        <h1 style="text-align: center;">Edit <%= gym.name %></h1>
        <form action="/gyms/<%= gym._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name" id="name">Name</label>
                <input class="form-control" type="text" name="gym[name]" value="<%= gym.name %>" required>
            </div>
            <div class="form-group">
                <label for="name" id="image">Image</label>
                <input class="form-control" type="text" name="gym[image]" value="<%= gym.image %>" required>
            </div>
            <div class="form-group">
                <label for="name" id="description">Description</label>
                <input class="form-control" type="text" name="gym[description]" value="<%= gym.description %>">
            </div>
            <div class="form-group">
                <label for="name" id="location">Location</label>
                <input class="form-control" type="text" name="gym[location]" value="<%= gym.location %>" required>
            </div>
            <div class="form-group">
                <label for="name" id="price">Price</label>
                <input class="form-control" type="number" name="gym[price]" value="<%= gym.price %>" max="1000" min="1" step="1" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>