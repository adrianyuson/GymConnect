<% include ../partials/header %>

<div class="container">
    <div style="width: 30%; margin: 25px auto">
        <h1 style="text-align: center;">Add New Gym</h1>
        <form action="/gyms" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" placeholder="name" maxlength="40" required>
            </div>
            <div class="form-group">
                <label for="name">Image</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <input class="form-control" type="text" id="description" name="description" placeholder="description">
            </div> 
            <div class="form-group">
                <label for="name">Location</label>
                <input class="form-control pac-input" type="text" id="location" name="location" placeholder="location" required>
            </div>
            <div class="form-group">
                <label for="name">Price</label>
                <input class="form-control" type="number" id="price" name="price" placeholder="price" max="1000" min="1" step="1" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>