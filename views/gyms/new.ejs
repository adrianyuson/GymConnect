<% include ../partials/header %>

<div class="container">
    <div style="width: 30%; margin: 25px auto">
        <h1 style="text-align: center;">Add New Gym</h1>
        <form action="/gyms" method="POST">
            <div class="form-group">
                <label for="name" id="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <label for="name" id="image">Image</label>
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="name" id="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="description">
            </div> 
            <div class="form-group">
                <label for="name" id="location">Location</label>
                <input class="form-control" type="text" name="location" placeholder="location">
            </div>
            <div class="form-group">
                <label for="name" id="price">Price</label>
                <input class="form-control" type="number" name="price" placeholder="price" min="1" step="1">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>