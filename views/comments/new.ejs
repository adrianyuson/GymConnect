<% include ../partials/header %>

<div class="container">
    <h2 style="text-align: center;">Add New Comment to <%= gym.name %></h2>
    <div style="width: 30%; margin: 25px auto">
        <form action="/gyms/<%= gym._id %>/comments" method="POST">
        <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
            </div>
    </form>
    </div>
</div>

<% include ../partials/footer %>